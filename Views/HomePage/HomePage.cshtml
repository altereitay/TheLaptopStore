@model List<TheLaptopStore.Models.Laptop>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Laptop Shop</title>
    <style>
        body {
            font-family: Poppins, Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            margin-bottom: 60px; /* Adjust the margin-bottom to accommodate the fixed footer */
        }

        header {
            display: flex;
            align-items: center;
            background-color: #333;
            color: rgb(157, 203, 255);
            text-align: center;
            padding: 10px 2rem;
            position: relative;
            h1

        {
            flex-grow: 1;
            text-align: center;
        }

        ul {
            display: flex;
            gap: 1rem;
            list-style: none;
            position: fixed;
            right: 2rem;
            li > a

        {
            text-decoration: none;
            color: white;
            transition: color 0.1s;
        }

        li > a:hover {
            color: rgb(103, 174, 255);
        }

        }
        }

        form {
            padding: 3rem 0;
            width: 85%;
            margin: 0 auto;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 1.5rem;
            .product

        {
            display: flex;
            flex-direction: column;
            padding: 1rem;
            border: 1px solid grey;
            border-radius: 4px;
            margin: 5px;
            background-color: #fff;
            width: 230px;
            transition: scale 0.15s, box-shadow 0.1s;
            > .product_img_container

        {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            border-radius: 4px;
            overflow: hidden;
            .product_img

        {
            align-self: center;
            width: 100%;
        }

        }


        > p {
            font-weight: bold;
            width: 100%;
            > span

        {
            font-weight: normal;
            font-size: 0.95rem;
        }

        }

        > .product_btn {
            border: none;
            cursor: pointer;
            font-weight: bold;
            text-align: center;
            padding: 0.5rem 0;
            width: 100%;
            background-color: rgb(157, 203, 255);
            transition: background-color 0.2s;
            border-radius: 4px;
        }

        .product_btn:hover {
            background-color: rgb(103, 174, 255);
        }

        }

        .product:hover {
            scale: 1.05;
            box-shadow: 0 10px 20px gray;
        }

        

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
            height: 50px; /* Adjust the height of the footer */
        }
            }
    

    </style>
</head>

<body>
    <header>
        <h1>The Laptop Store</h1>
        <form action="FilterByPrice" method="post">
            <label for="priceFilter">Filter by Price:</label>
            <select id="priceFilter" name="priceFilter">
                <option value="all">All</option>
                <option value="100">Above $100</option>
                <option value="200">Above $200</option>
            </select>
            <label for="RamFilter">Filter by Ram:</label>
            <select id="RamFilter" name="RamFilter">
                <option value="all">All</option>
                <option value="8">8 Ram</option>
                <option value="16">16 Ram</option>
                <option value="32">32 Ram</option>
            </select>
            <button type="submit">Apply Filter</button>
        </form>
    </header>
    <div class="grid-container">
        <form action="Product" method="post">
            @foreach (var laptop in Model)
            {
                <div class="product">
                    <h2>@laptop.Model</h2>
                    <img id="img" src="@laptop.Picture" alt="@laptop.Model">
                    <p id="description">Description: @laptop.Description </p>
                    <p id="Ram">Ram: @laptop.Ram</p>
                    <p id="price">Price: $@laptop.Price</p>
                    <a href="@Url.Action("Product", "HomePage", laptop)">See More</a>
                </div>
            }
        </form>
    </div>
    <footer>
        <p>&copy; 2024 The Laptop Shop</p>
    </footer>
</body>

</html>
