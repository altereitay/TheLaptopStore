                    <script>
                        var isMouseDown = false;

                        document.getElementById('ramFilter').addEventListener('mousedown', function (e) {
                            e.preventDefault();
                            isMouseDown = true;
                            selectOption(e);
                        });

                        document.addEventListener('mouseup', function () {
                            isMouseDown = false;
                        });

                        document.getElementById('ramFilter').addEventListener('mousemove', function (e) {
                            if (isMouseDown) {
                                selectOption(e);
                            }
                        });

                        function selectOption(event) {
                            var option = document.elementFromPoint(event.clientX, event.clientY);
                            if (option && option.tagName === 'OPTION') {
                                option.selected = !option.selected;
                            }
                        }
                    </script>

