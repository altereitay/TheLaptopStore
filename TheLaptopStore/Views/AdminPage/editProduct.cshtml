@model TheLaptopStore.Data.Laptop

@{
    ViewData["Title"] = "editProduct";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <style>
        .form-group {
            opacity: 0;
            transform: translateY(-50px);
            transition: opacity 0.5s ease, transform 0.5s ease;
        }
    </style>
</head>
<body>
<h1>editProduct</h1>

<h4>Laptop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="AdminPage" asp-action="edit" asp-route-model="@Model.Model">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label for="ram" class="form-label">RAM:</label>
                <select asp-for="Ram" value="@Model.Ram" class="form-select" id="Ram" required>
                    <option value="">Choose...</option>
                    <option value="4">4 GB</option>
                    <option value="8">8 GB</option>
                    <option value="16">16 GB</option>
                    <option value="32">32 GB</option>
                    <option value="64">64 GB</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="SSD" class="control-label">SSD:</label>
                <select asp-for="SSD" class="form-select" id="SSD" required>
                    <option value="">Choose...</option>
                    <option value="128">128 GB</option>
                    <option value="256">256 GB</option>
                    <option value="512">512 GB</option>
                    <option value="1024">1 TB</option>
                    <option value="2048">2 TB</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="CPU" class="control-label">CPU:</label>
                <select asp-for="CPU" value="@Model.CPU" class="form-select" id="CPU" required>
                    <option value="">Choose...</option>
                    <option value="I3">Intel I3</option>
                    <option value="I5">Intel I5</option>
                    <option value="I7">Intel I7</option>
                    <option value="I9">Intel I9</option>
                    <option value="R3">Ryzen 3</option>
                    <option value="R5">Ryzen 5</option>
                    <option value="R7">Ryzen 7</option>
                    <option value="R9">Ryzen 9</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="ScreenSize" class="control-label">Screen Size:</label>
                <select asp-for="ScreenSize" value="@Model.ScreenSize" class="form-select" id="ScreenSize" required>
                    <option value="">Choose...</option>
                    <option value="13.3">13.3"</option>
                    <option value="14">14"</option>
                    <option value="14.5">14.5"</option>
                    <option value="15.6">15.6"</option>
                    <option value="16">16"</option>
                    <option value="17.3">17.3"</option>
                    <option value="18">18"</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="GPU" class="control-label">GPU:</label>
                <select asp-for="GPU" value="@Model.GPU" class="form-select" id="GPU" required>
                    <option value="">Choose...</option>
                    <option value="irisxe">Intel IrisXe</option>
                    <option value="arc">Intel Arc</option>
                    <option value="apple18">Apple 18 Core</option>
                    <option value="apple40">Apple 40 Core</option>
                    <option value="rtx3050">Nvidia RTX 3050</option>
                    <option value="rtx3060">Nvidia RTX 3060</option>
                    <option value="rtx3070">Nvidia RTX 3070</option>
                    <option value="rtx3080">Nvidia RTX 3080</option>
                    <option value="rtx3090">Nvidia RTX 3090</option>
                    <option value="rtx4050">Nvidia RTX 4050</option>
                    <option value="rtx4060">Nvidia RTX 4060</option>
                    <option value="rtx4070">Nvidia RTX 4070</option>
                    <option value="rtx4080">Nvidia RTX 4080</option>
                    <option value="rtx4090">Nvidia RTX 4090</option>
                    <option value="amdrx6850">AMD RX6850</option>
                    <option value="amd780">AMD 780M</option>
                    <option value="amdrx6500">AMD RX6500</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" value="@Model.Price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Maker" class="control-label"></label>
                <input asp-for="Maker" class="form-control" value="@Model.Maker" />
                <span asp-validation-for="Maker" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" value="@Model.Color" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" value="@Model.Quantity" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description:</label>
                <textarea asp-for="Description" class="form-control" rows="6">@Model.Description</textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                <input asp-for="Picture" class="form-control" value="@Model.Picture" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalePrecentage" class="control-label"></label>
                <input asp-for="SalePrecentage" class="form-control" value="@Model.SalePrecentage" />
                <span asp-validation-for="SalePrecentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label">Category:</label>
                <select asp-for="Category" value="@Model.Category" class="form-select" id="Category" required>
                    <option value="">Choose...</option>
                    <option value="gaming">Gaming</option>
                    <option value="2-in-1">2-in-1</option>
                    <option value="everyday">Every Day Work</option>
                    <option value="office">Expert Office Work</option>
                    <option value="students">Students</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseDate" class="control-label"></label>
                <input asp-for="ReleaseDate" class="form-control" value="@Model.ReleaseDate" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Model" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var formGroups = document.querySelectorAll('.form-group');
            formGroups.forEach(function (formGroup, index) {
                setTimeout(function () {
                    formGroup.style.opacity = '1';
                    formGroup.style.transform = 'translateY(0)';
                }, index * 200); // Adjust the delay between each form element falling into place
            });
        });
    </script>
</body>
</html>