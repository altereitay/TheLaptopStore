<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Credit Card Payment Form</title>

    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: 'Courier New', Courier, monospace;
        }

        /* body {
                            height: 100%;
                            background-color: #222222;
                        } */

        .container {
            width: 100%;
            height: 30%;
        }

        .ui {
            border: 0;
            box-shadow: 0 0 10´x 0 rgba(149, 184, 209, .5);
            border-radius: 10px;
            width: 80%;
            height: 470px;
            padding: 10%;
            display: flex;
            gap: 20px;
            background-color: #13274F;
            align-items: center;
            margin-left: 135px
        }

        .container-left {
            width: 50%;
        }

        .container-right {
            width: 50%;
            display: flex;
            align-items: center;
        }

        .card {
            width: 500px;
            height: 250px;
            margin: 0 auto;
            background: linear-gradient(45deg, rgba(2,0,36,1) 0%, rgba(0,140,177,1) 35%, rgba(0,29,125,1) 100%);
            border: 1px solid rgba(0,0,0,.3);
            border-radius: 15px;
        }

        .intern {
            padding: 20px;
        }

        .approximation {
            width: 30px;
            transform: rotate(90deg);
        }

        .chip {
            height: 40px;
            position: relative;
            left: 87%;
            bottom: 20px;
        }

        .card-number {
            margin-top: 40px;
            font-size: 1.5rem;
            font-weight: 700;
            color: white;
            display: flex;
        }

        .card-holder {
            color: whitesmoke;
        }

        .card label {
            font-size: .7rem;
        }

        .card-infos {
            display: flex;
            width: 30%;
            justify-content: space-between;
            color: white;
        }

        #credit-card {
            display: flex;
            flex-direction: column;
            gap: 15px;
            font-size: 1.1rem;
            color: white;
            text-transform: uppercase;
        }

        .number-container, .name-container {
            display: flex;
            flex-direction: column;
        }

        .expiration-container, .cvv-container {
            width: 50%;
        }

        input {
            border: 0;
            border-radius: 5px;
            padding: 10px;
            background-color: #333333;
            color: white;
            font-weight: 600;
            font-size: 1.1rem;
            outline: 0;
            width: 90%;
        }

            input[type="text"]:focus {
                border: 1px solid #95B8D1;
            }

            input#valid-thru-text, input#cvv-text {
                width: 80%;
            }

            input[type="submit"] {
                width: 95%;
                background-color: #008cb1;
                cursor: pointer;
            }

        .infos-container {
            display: flex;
        }

        .payment-section {
            display: none; 
        }

    </style>
</head>
<body>
    <audio autoplay>
        <source src="~/photos/song.mp3" type="audio/mp3">
        Your browser does not support the audio element.
    </audio>
    <div id="address-section">
        <h1>Shipping Info</h1>
        <div class="form-floating mb-3">
            <input class="form-control" autocomplete="City" aria-required="true" placeholder="City" />
            <label>City</label>
            <span class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input class="form-control" autocomplete="StreetName" aria-required="true" placeholder="Street" />
            <label>Street Name</label>
            <span class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input class="form-control" autocomplete="BuildingNumber" aria-required="true" placeholder="Building Number" />
            <label>Building Number</label>
            <span class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input class="form-control" autocomplete="ApartmentNumber" aria-required="true" placeholder="Apartment Number" />
            <label>Apartment Number</label>
            <span class="text-danger"></span>
        </div>
        <button id="show-payment" style= "width: 300px; background-color: #007FFF; color: #fff; text-align: center; display: inline-block; padding: 10px 20px; text-decoration: none; border-radius: 5px;">Proceed to Payment</button>
    </div>

    <main class="payment-section">
        <section class="ui">
            <div class="container-left">
                <form id="credit-card" action="payNow" id="paymentForm">
                    <div class="number-container">
                        <label for="card-number">Card Number</label>
                        <input type="text" name="cardNumber" id="cardNumber" maxlength="19" placeholder="1234 5678 9101 1121" required>
                    </div>
                    <div class="name-container">
                        <label for="name-text">Holder</label>
                        <input type="text" name="name-text" id="name-text" maxlength="30" placeholder="Lior Gofman" required>
                    </div>
                    <script>
                        document.addEventListener("DOMContentLoaded", function () {
                            const nameInput = document.getElementById("name-text");

                            nameInput.addEventListener("input", function () {
                                const inputValue = this.value.trim();


                                const regex = /^[a-zA-Z]+(?: [a-zA-Z]+)*$/;

                                if (!regex.test(inputValue)) {

                                    this.value = inputValue.replace(/[^a-zA-Z ]/g, '');
                                }


                                const names = inputValue.split(' ');


                                if (names.length < 2 || names[0].length === 0 || names[1].length === 0) {

                                    this.setCustomValidity("Please enter both first name and last name.");
                                } else {
                                    this.setCustomValidity("");
                                }
                            });
                        });
                    </script>


                    <div class="infos-container">
                        <div class="expiration-container">
                            <label for="valid-thru-text">Valid-thru</label>
                            <input type="text" name="expDate" id="expDate" maxlength="5" placeholder="02/40" required>
                        </div>
                        <div class="cvv-container">
                            <label for="cvv-text">CVV</label>
                            <input type="text" name="CVV" id="CVV" maxlength="3" placeholder="123" required>
                        </div>
                        <script>
                            document.addEventListener("DOMContentLoaded", function () {
                                const cvvInput = document.getElementById("CVV");

                                cvvInput.addEventListener("input", function () {
                                    
                                    this.value = this.value.replace(/\D/g, '');

                                    if (this.value.length > parseInt(this.getAttribute("maxlength"))) {
                                        this.value = this.value.slice(0, parseInt(this.getAttribute("maxlength")));
                                    }
                                });
                            });
                        </script>
                    </div>
                    <input type="submit" value="Pay Now" id="add">
                </form>
            </div>
            <div class="container-right" style="width: 400px">
                <div class="card">
                    <div class="intern">
                        <img class="approximation" src="~/photos/aprox.png" alt="aproximation">
                        <div class="card-number">
                            <div class="number-vl">1111 2222 3333 4444</div>
                        </div>
                        <div class="card-holder">
                            <label>Holder</label>
                            <div class="name-vl">Lior Gofman</div>
                        </div>
                        <div class="card-infos">
                            <div class="exp">
                                <label>valid-thru</label>
                                <div class="expiration-vl">02/40</div>
                            </div>
                            <div class="cvv">
                                <label>CVV</label>
                                <div class="cvv-vl">123</div>
                            </div>
                        </div>
                        <img class="chip" src="~/photos/chip.png" alt="chip">
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script>
        document.getElementById("show-payment").addEventListener("click", function () {
            
            var cityInput = document.querySelector("#address-section input[autocomplete='City']");
            var streetNameInput = document.querySelector("#address-section input[autocomplete='StreetName']");
            var buildingNumberInput = document.querySelector("#address-section input[autocomplete='BuildingNumber']");
            var apartmentNumberInput = document.querySelector("#address-section input[autocomplete='ApartmentNumber']");

         
            var cityRegex = /^[A-Za-z]+$/;
            var cityValid = cityRegex.test(cityInput.value.trim());

        
            var streetNameRegex = /^[A-Za-z\s]+$/;
            var streetNameValid = streetNameRegex.test(streetNameInput.value.trim());

       
            var buildingNumberRegex = /^[0-9]+$/;
            var buildingNumberValid = buildingNumberRegex.test(buildingNumberInput.value.trim());

   
            var apartmentNumberValid = buildingNumberRegex.test(apartmentNumberInput.value.trim());

            if (cityInput.value.trim() !== "" && streetNameInput.value.trim() !== "" && buildingNumberInput.value.trim() !== "" && apartmentNumberInput.value.trim() !== "" && cityValid && streetNameValid && buildingNumberValid && apartmentNumberValid) {
                document.getElementById("address-section").style.display = "none"; 
                document.querySelector(".payment-section").style.display = "block"; 
            } else {
                if (!cityValid) {
                    alert("City name should contain only letters.");
                } else if (!streetNameValid) {
                    alert("Street name should contain only letters.");
                } else if (!buildingNumberValid) {
                    alert("Building number should contain only numbers.");
                } else if (!apartmentNumberValid) {
                    alert("Apartment number should contain only numbers.");
                } else {
                    alert("Please fill in all address fields.");
                }
            }
        });
    </script>
    <script>
        const form = document.querySelector("#credit-card");

        const cardNumber = document.querySelector("#cardNumber");
        const cardHolder = document.querySelector("#name-text");
        const cardExpiration = document.querySelector("#expDate");
        const cardCVV = document.querySelector("#CVV");

        const cardNumberText = document.querySelector(".number-vl");
        const cardHolderText = document.querySelector(".name-vl");
        const cardExpirationText = document.querySelector(".expiration-vl");
        const cardCVVText = document.querySelector(".cvv-vl");

        cardNumber.addEventListener("input", (e) => {
            const input = e.target.value.replace(/\D/g, '');


            const formattedInput = input.replace(/(\d{4})(?=\d)/g, '$1 ');


            e.target.value = formattedInput;
            cardNumberText.innerText = formattedInput || "1234 5678 9101 1121";
        });

        cardHolder.addEventListener("keyup", (e) => {
            if (!e.target.value) {
                cardHolderText.innerHTML = "LIOR GOFMAN";
            } else {
                cardHolderText.innerHTML = e.target.value.toUpperCase();
            }
        });

        cardExpiration.addEventListener("input", (e) => {
            const input = e.target.value.replace(/\D/g, ''); 

            const formattedInput = input.replace(/(\d{2})(?=\d)/g, '$1/');

          
            e.target.value = formattedInput;
            cardExpirationText.innerHTML = formattedInput || "02/40";
        });

        cardCVV.addEventListener("keyup", (e) => {
            if (!e.target.value) {
                cardCVVText.innerHTML = "123";
            } else {
                cardCVVText.innerHTML = e.target.value;
            }
        });

        form.addEventListener("submit", function (event) {
            let errors = [];

            const cardNumber = document.querySelector("#cardNumber");
            const regex = /^[0-9]+$/;

            if (!regex.test(cardNumber.value.replace(/\s/g, ""))) {
                errors.push("Card number must be only digits.");
            }

            if (cardNumber.value.replace(/\s/g, "").length !== 16) {
                errors.push("Card number must be 16 digits.");
            }

            const cardExpiration = document.querySelector("#expDate");
            const currentYear = new Date().getFullYear();
            const currentMonth = new Date().getMonth() + 1
            const userYear = parseInt('20' + cardExpiration.value.split("/")[1])
            const userMonth = parseInt(cardExpiration.value.split("/")[0])
            if (userMonth > 12 || userMonth < 1) {
                errors.push('Expiration Month invalid');
            } else if ((userYear === currentYear && userMonth < currentMonth) || userYear < currentYear) {
                errors.push("Expiration date must be in the future.");
            }

            const cardCVV = document.querySelector("#CVV");
            if (cardCVV.value.length !== 3) {
                errors.push("CVV must be 3 digits.");
            }

            if (errors.length > 0) {
                event.preventDefault();
                alert(errors.join("\n"));
            } else {
                alert("Thanks for buying!");
                form.submit();
            }
        });

    </script>
</body>
</html>
